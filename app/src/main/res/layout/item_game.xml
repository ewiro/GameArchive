<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp">

    <!-- 游戏封面 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="130dp"
        android:layout_height="73dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivGameIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />
    </androidx.cardview.widget.CardView>

    <!-- 游戏时长胶囊 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTimeBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/llTimeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTimeIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_time"
                app:tint="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPlayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100h"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 两周活跃时长 (显示在胶囊下方) -->
    <TextView
        android:id="@+id/tvPlayTime2Weeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="+12.5h"
        android:textColor="?attr/colorPrimary"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/cvTimeBadge"
        app:layout_constraintTop_toBottomOf="@id/cvTimeBadge" />

    <!-- 游戏名称 (顶部对齐，最多显示两行) -->
    <TextView
        android:id="@+id/tvGameName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Game Name Title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/cvImage"
        app:layout_constraintEnd_toStartOf="@id/cvTimeBadge"
        app:layout_constraintTop_toTopOf="@id/cvImage" />

    <!-- 好评率 (底部对齐，与封面底部平齐) -->
    <TextView
        android:id="@+id/tvReviewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95% 好评"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:textColor="#1565C0"
        app:layout_constraintStart_toStartOf="@id/tvGameName"
        app:layout_constraintBottom_toBottomOf="@id/cvImage" />

</androidx.constraintlayout.widget.ConstraintLayout>