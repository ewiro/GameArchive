<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- 页面容器 (承载 LibraryFragment 和 SpecialsFragment) -->
    <!-- 约束铺满全屏，确保内容可以在半透明底栏下方显示 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 底部导航栏 -->
    <!-- 高度固定 56dp，去除了点击波纹和胶囊背景 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorSurfaceContainer"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"

        app:itemIconTint="@color/sel_nav_color"
        app:itemTextColor="@color/sel_nav_color"

        app:itemIconSize="24dp"
        app:itemPaddingTop="2dp"
        app:itemPaddingBottom="12dp"

        app:itemActiveIndicatorStyle="@null"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextAppearanceActive="@style/SmallBottomNavText"
        app:itemTextAppearanceInactive="@style/SmallBottomNavText"

        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>