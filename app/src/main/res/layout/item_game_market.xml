<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp">

    <!-- 游戏封面 (左侧固定) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="130dp"
        android:layout_height="73dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivGameIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@android:drawable/ic_menu_gallery"/>
    </androidx.cardview.widget.CardView>

    <!-- 价格信息区域 (右侧垂直排列) -->
    <LinearLayout
        android:id="@+id/llPriceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 折扣显示胶囊 (位于上方) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:text="-50%"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </androidx.cardview.widget.CardView>

        <!-- 具体价格 (位于下方) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥199"
                android:textSize="10sp"
                android:textColor="#9E9E9E"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvFinalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥99"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 游戏名称 (顶部对齐，最多显示两行) -->
    <TextView
        android:id="@+id/tvGameName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Game Name"
        android:textColor="?attr/colorOnSurface"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/cvImage"
        app:layout_constraintEnd_toStartOf="@id/llPriceContainer"
        app:layout_constraintTop_toTopOf="@id/cvImage" />

    <!-- 好评率 (底部对齐，与封面底部平齐) -->
    <TextView
        android:id="@+id/tvReviewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95% 好评"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        tools:textColor="#66C0F4"
        app:layout_constraintStart_toStartOf="@id/tvGameName"
        app:layout_constraintBottom_toBottomOf="@id/cvImage" />

</androidx.constraintlayout.widget.ConstraintLayout>